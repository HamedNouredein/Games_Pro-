@model CreateGameFormViewModel
@{
	ViewData["Title"] = "Add Game";
}
<p>
	<i class="bi bi-plus-circle-dotted"></i>
	Add a new game
	</p>
<form asp-controller="Games" method="post" enctype="multipart/form-data">
	<div class="row">
		<div class="col-md-6">
			<div class="form-group">
				<label asp-for="Name"class="col-form-label mt-4"></label>
				<input type="text"class="form-control" asp-for="Name"placeholder="Name"/>
				<span asp-validation-for="Name" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="CategoryId" class="col-form-label mt-4"></label>
				<select class="form-select" asp-for=CategoryId asp-items="Model.Categories"
						data-placeholder="Select a category" data-minimum-results-for-search="Infinity"> 
					
				</select>
				<span asp-validation-for="CategoryId" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="SelectedDevices" class="col-form-label mt-4"></label>
				<select class="form-select" asp-for=SelectedDevices asp-items="Model.Devices"
						data-placeholder="Select a devices">
					<option value=""></option>
				</select>
				<span asp-validation-for="CategoryId" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Description" class="col-form-label mt-4"></label>
				<textarea asp-for="Description" class="form-control" placeholder="Description"></textarea>
				<span asp-validation-for="Description" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Cover" class="col-form-label mt-4"></label>
				<input type="file" class="form-control" asp-for="Cover"
					   data-rule-extension="@FileSettings.AllowwdExtensions.Replace(".", string.Empty)"
					   data-msg-extension="Not allowed extension" 
					   data-rule-filesize="@FileSettings.MaxFileSizeInBytes"
					   data-msg-filesize="Maximum allowed size is @FileSettings.MaxFileSizeInMB MB">
					   />
				<small class="form-text text-muted">anly @FileSettings.AllowwdExtensions file allowed with max size @(FileSettings.MaxFileSizeInBytes)MB</small>
				<span asp-validation-for="Cover" class="text-danger d-block"></span>
			</div>
			<button type="submit"class="btn btn-light text-black mt-4">Save</button>
		</div>
		<div class="col-md-6 d-flex justify-content-center pt-4 overflow-hidden">
			<img class="cover-preview d-none" alt="Cover" />
		</div>
	</div>

</form>

@* ده اسمه كلاينت سايد فليديشن بيعمل  فلد في الفورم لما ميكونش فيه بيانات  *@
@section Scripts {
	<partial name="_ValidationScriptsPartial" />
	<script src="~/js/filesize-validator.js" asp-append-version="true"></script>
	<script src="~/js/game-form.js" asp-append-version="true"></script>
}
